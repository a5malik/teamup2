<!DOCTYPE html>
<html>
<head>
  <title>TeamUp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <header class="navbar navbar-default navbar-inverse" role="navigation">
    <div class="navbar-inner">
      <div class="container">
        <div id="logo" class="navbar-brand"><%= link_to "Team Up", root_path %></div>
        <nav class="collapse navbar-collapse navbar-ex1-collapse">
        	<% if user_signed_in? %>
						<ul class="nav navbar-nav navbar-right">
              <li> <%= link_to 'My Profile', user_path(current_user) %> </li>
               <li> <%= link_to 'Join a Class', {:controller => 'join_classes', :action => 'index'} %> </li>
               <li> <%= link_to 'Sign Out', destroy_user_session_path, :method => :delete %></li>
						</ul>
          <% end %>
        </nav>
      </div>
    </div>
  </header>
   <div id="wrapper">
 <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
               <li class="sidebar-brand">
                        Your Classes
                </li>
              <% if user_signed_in? %>
                <% @courses.each do |course| %>
                  <% if @course_team.has_key?(course) %>
                  <% team = @course_team[course] %>
                        <li><%= link_to course.name, course %>
                            <ul>
                                <li><%= link_to team.name, team %>
                            </ul>
                        </li>
                   <% else %>
                      <li> <%= link_to course.name, course %></li>
                 <% end %>
              <% end %>
           <% end %>
      </ul>
  </div>

 <div id="page-content-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">

		                    <% flash.each do |name, msg| %>
			                    <%= content_tag(:div, msg, class: "alert alert-info") %>
		                        <% end %>


				                      <%= yield %>
                      </div>
                </div>
            </div>
        </div>
  </div>
</body>
</html>
